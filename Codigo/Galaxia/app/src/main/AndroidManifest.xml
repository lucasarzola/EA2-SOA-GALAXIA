<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.galaxia">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/icon_noti"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Galaxia">
        <activity
            android:name=".model.Score"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity
            android:name=".model.LoginActivity">

        </activity>
        <activity
            android:name=".model.ActivityEventos"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity
            android:name=".model.MainMenuActivity"
            tools:ignore="LockedOrientationActivity">

        </activity>
        <activity
            android:name=".model.RegistroActivity"
            tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
            android:name=".model.GameActivity"
            tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
            android:name=".model.HomeActivity"
            tools:ignore="LockedOrientationActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
        </activity>
        <service
            android:name="com.example.galaxia.servicios.firebase.MensajeriaService"
            android:exported="false"
            android:directBootAware ="true"
            tools:ignore="WrongManifestParent">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.example.galaxia.servicios.ServicioHTTP" />
    </application>

</manifest>